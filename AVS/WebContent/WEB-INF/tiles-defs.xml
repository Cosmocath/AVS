<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>
	<!-- Voici l'organisation du template de base à ne jamais toucher. Il faut 
		faire un extends comme l'exemple ci-dessous -->
	<definition name="template" page="/jsp/tiles/template.jsp">
		<put name="header" value="/jsp/tiles/header.jsp" />
		<put name="menu" value="/jsp/tiles/menu.jsp" />
		<put name="body" value="/jsp/tiles/body.jsp" />
		<put name="footer" value="/jsp/tiles/footer.jsp" />
	</definition>

	<definition name="listerCommande" extends="template">
		<put name="body" value="/jsp/commande/listerCommande.jsp" />
	</definition>

	<!-- CGU -->
	<definition name="cgu" extends="template">
		<put name="body" value="/jsp/cgu/CGU.jsp" />
	</definition>

	<!-- La connection / déconnexion -->

	<definition name="voirConnecterUser" extends="template">
		<put name="body" value="/jsp/users/connecterUser.jsp" />
	</definition>

	<!-- Equipe Users -->
	<definition name="voirCreerUser" extends="template">
		<put name="body" value="/jsp/users/creerUser.jsp" />
	</definition>
	<definition name="listerUser" extends="template">
		<put name="body" value="/jsp/users/listerUser.jsp" />
	</definition>

	<definition name="consulterUser" extends="template">
		<put name="body" value="/jsp/users/consulterUser.jsp" />
	</definition>

	<!-- Equipe Produit -->
	<definition name="listerProduitClient" extends="template">
		<put name="body" value="/jsp/produit/listerProduitClient.jsp" />
	</definition>

	<definition name="listerProduitAdmin" extends="template">
		<put name="body" value="/jsp/produit/listerProduitAdmin.jsp" />
	</definition>

	<definition name="consulterProduit" extends="template">
		<put name="body" value="/jsp/produit/consulterProduit.jsp" />
	</definition>

	<definition name="voirCreerProduit" extends="template">
		<put name="body" value="/jsp/produit/creerProduit.jsp" />
	</definition>

	<definition name="creerProduit" extends="template">
		<put name="body" value="/jsp/produit/creerProduit.jsp" />
	</definition>

	<!-- Equipe Commande -->


	<!-- Equipe Panier -->
	<definition name="afficherPanier" extends="template">
		<put name="body" value="/jsp/panier/panier.jsp" />
	</definition>

</tiles-definitions>
