<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="persistance.bean.UserDo" table="utilisateur">
		<!-- la clé primaire -->
		<id name="id" column="id_Utilisateur" type="integer">
			<generator class="identity"></generator>
		</id>

		<!-- les propriétés simples -->

		<property name="nom" column="nom"></property>
		<property name="prenom" column="prenom"></property>
		<property name="dateNaissance" column="date_naissance"></property>
		<property name="adresse" column="adresse"></property>
		<property name="mail" column=""></property>
		<property name="password" column="password"></property>
		<property name="actif" column="actif"></property>

	</class>
</hibernate-mapping>