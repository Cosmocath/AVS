<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="persistance.produitVendu.beanDo.ProduitVenduDo"
		table="produitvendu">
		<!-- la clé primaire -->
		<id name="idProduitVendu" column="id_ProduitVendu" type="integer">
			<generator class="identity"></generator>
		</id>
		<!-- les propriétés simples -->
		<property name="designation" column="designation"></property>
		<property name="reference" column="reference"></property>
	<property name="description" column="description"></property>
		<property name="prix" type="double">
			<column name="prix" sql-type="float" />
		</property>
		<property name="image" column="image"></property>
		<property name="numeroVersion" column="numero_version"></property>
		<property name="idProduitHistorise"
			column="id_Produit_Historise" type="integer"></property>
	</class>

</hibernate-mapping>